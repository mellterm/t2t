<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tag %>
	
	<!-- cache all stylesheets into a single base css -->
    <%= stylesheet_link_tag 'blueprint-css-9bf9513/blueprint/screen', 'custom', 'formtastic', 'formtastic_changes', :cache => 'base'  %>
	
	
	<!--[if lt IE 9]>
	    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	    <![endif]-->
	<!--[if lt IE 8]><%= stylesheet_link_tag '/blueprint-css-9bf9513/blueprint/ie' %><![endif]-->
	<!--[if IE 6]><%= stylesheet_link_tag 'formtastic_ie6' %><![endif]-->
	<!--[if IE 7]><%= stylesheet_link_tag 'formtastic_ie7' %><![endif]-->
	
	<style = "text/css">
		h1 {color: red;}
		.main {
			color: green;
			text-align: left;}
		#flash {display: inline;}
	</style>
  </head>
  <body>
 	<div class="container showgrid">
		<%= render 'layouts/header' %>
		<%= render 'layouts/nav' %>	
	  	<div class="span-24">
	  		<section class="round">
		        <%= yield %>
		      </section>
		</div>

		<div class="span-24">
			 The footer
		</div>
		<div class="span-24">
	        <p>
	          <a href="http://validator.w3.org/check?uri=referer" >
	           <img src="/images/valid.png" alt="Valid HTML 4.01 Strict" height="31" width="88" class="bottom">
	          </a>
	       </p>
	     </div>	
	</div> <!-- container -->
	<%= debug(params) if Rails.env.development? %>
  </body>
</html>







