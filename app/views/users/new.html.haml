%h1= t(:signup)
/ include other settings
/ TODO include picture (use paperclip or like)
= form_for @user do |f|
  - if @user.errors.any?
    .error_messages
      %h2= t(:form_is_invalid)
      %ul
        - for message in @user.errors.full_messages
          %li= message
  %p
  = f.label :email, t(:email) 
  %br/
  = f.text_field :email
  %p
  = f.label :password, t(:password )
  %br/
  = f.password_field :password
  %p
  = f.label :password_confirmation, t(:password_confirmation)
  %br/
  = f.password_field :password_confirmation
  %p
  = f.label :preferred_language_id, t(:preferred_language)
  %br/
  =f.select :preferred_language, Language.all.collect { |l| [l.ISOcode, l.id] }, { :include_blank => "Choose a language.."}	
  %p.button= f.submit
